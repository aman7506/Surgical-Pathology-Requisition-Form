@model PaginatedList<PathologyRequisitionForm>

<div class="container-fluid main-scroll-container">
    <div class="card shadow mt-4">
        <div class="card-header bg-primary text-white">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h4 class="mb-0">Pathology Requisition Forms</h4>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Index" class="btn btn-light">Create New Form</a>
                </div>
            </div>
        </div>
        
        <div class="card-body">
            <!-- Improved Search Section with Separated Fields -->
            <form method="get" class="mb-4">
                <div class="row g-3">
                    <!-- UHID Search -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label fw-bold">UHID</label>
                            <input type="text" name="uhid" class="form-control" 
                                   value="@ViewData["UHIDFilter"]" 
                                   placeholder="Enter UHID"/>
                        </div>
                    </div>
                    
                    <!-- Patient Name Search -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label fw-bold">Patient Name</label>
                            <input type="text" name="patientName" class="form-control" 
                                   value="@ViewData["NameFilter"]" 
                                   placeholder="Enter name"/>
                        </div>
                    </div>
                    
                    <!-- Lab Ref Search -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label fw-bold">Lab Ref No</label>
                            <input type="text" name="labRefNo" class="form-control" 
                                   value="@ViewData["LabRefFilter"]" 
                                   placeholder="Enter lab ref"/>
                        </div>
                    </div>
                    
                    <!-- Date Search -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label fw-bold">Date</label>
                            <input type="date" name="formDate" class="form-control" 
                                   value="@ViewData["DateFilter"]"/>
                        </div>
                    </div>
                    
                    <!-- Gender Filter -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label fw-bold">Gender</label>
                            <select name="gender" class="form-select">
                                <option value="">All Genders</option>
                                <option value="Male" selected="@(ViewData["GenderFilter"]?.ToString() == "Male")">Male</option>
                                <option value="Female" selected="@(ViewData["GenderFilter"]?.ToString() == "Female")">Female</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="col-md-12 text-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search me-1"></i> Search
                        </button>
                        <a asp-action="List" class="btn btn-secondary">
                            <i class="fas fa-sync-alt me-1"></i> Reset
                        </a>
                    </div>
                </div>
            </form>

            <!-- Results Table with Scroll -->
            <div class="table-responsive" style="max-height: 60vh; overflow-y: auto;">
                <table class="table table-striped table-hover">
                    <thead class="table-dark sticky-top">
                        <tr>
                            <th>Date</th>
                            <th>UHID</th>
                            <th>Patient Name</th>
                            <th>Lab Ref No</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Date.ToShortDateString()</td>
                                <td>@item.UHID</td>
                                <td>@item.Name</td>
                                <td>@item.LabRefNo</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Pathology" asp-action="Details" asp-route-uhid="@item.UHID" class="btn btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-uhid="@item.UHID" class="btn btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-uhid="@item.UHID" method="post" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this record?');">
                                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" 
                           asp-action="List"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-uhid="@ViewData["UHIDFilter"]"
                           asp-route-patientName="@ViewData["NameFilter"]"
                           asp-route-labRefNo="@ViewData["LabRefFilter"]"
                           asp-route-formDate="@ViewData["DateFilter"]"
                           asp-route-gender="@ViewData["GenderFilter"]">
                            Previous
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" 
                               asp-action="List"
                               asp-route-pageNumber="@i"
                               asp-route-uhid="@ViewData["UHIDFilter"]"
                               asp-route-patientName="@ViewData["NameFilter"]"
                               asp-route-labRefNo="@ViewData["LabRefFilter"]"
                               asp-route-formDate="@ViewData["DateFilter"]"
                               asp-route-gender="@ViewData["GenderFilter"]">
                                @i
                            </a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" 
                           asp-action="List"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-uhid="@ViewData["UHIDFilter"]"
                           asp-route-patientName="@ViewData["NameFilter"]"
                           asp-route-labRefNo="@ViewData["LabRefFilter"]"
                           asp-route-formDate="@ViewData["DateFilter"]"
                           asp-route-gender="@ViewData["GenderFilter"]">
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body, .section-title, .form-label, .form-control, .btn, .badge {
            font-family: 'Montserrat', 'Poppins', Arial, sans-serif;
        }
        .section-title {
            color: #1976d2;
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 1.5rem;
            letter-spacing: 1px;
        }
        .badge {
            border-radius: 0.75rem;
            font-size: 1rem;
            font-weight: 600;
            padding: 0.5em 1.2em;
        }
        .btn {
            font-weight: 600;
            border-radius: 0.75rem;
        }
        .card {
            border-radius: 1rem;
        }
        /* Full page scroll */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }
        
        .main-scroll-container {
            height: 100vh;
            overflow-y: auto;
            padding: 20px;
        }
        
        /* Table styling */
        .table th {
            position: sticky;
            top: 0;
            background: #343a40;
            color: white;
        }
        
        /* Scrollbar styling */
        ::-webkit-scrollbar {
            width: 10px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 5px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
        
        /* Form field spacing */
        .form-group {
            margin-bottom: 1rem;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Ensure form submits all search parameters
            $('form').submit(function() {
                $(this).find('input, select').each(function() {
                    if (!$(this).val()) {
                        $(this).removeAttr('name');
                    }
                });
                return true;
            });
        });
    </script>
} 