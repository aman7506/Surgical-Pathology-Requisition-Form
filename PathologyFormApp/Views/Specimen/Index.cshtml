@model List<PathologyFormApp.Models.SpecimenType>

@{
    ViewData["Title"] = "Specimen Types Management";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-flask me-2"></i>
                        Specimen Types Management
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Add New Specimen Type Form -->
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <form asp-action="AddFromForm" method="post" class="row g-3">
                                <div class="col-md-8">
                                    <label for="Name" class="form-label">New Specimen Type Name:</label>
                                    <input type="text" class="form-control" id="Name" name="Name" 
                                           placeholder="Enter specimen type name" required>
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-plus me-2"></i>Add Specimen Type
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Specimen Types Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Specimen Type Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var specimen in Model)
                                    {
                                        <tr>
                                            <td>@specimen.Id</td>
                                            <td>
                                                <span class="fw-bold">@specimen.Name</span>
                                            </td>
                                            <td>
                                                <form asp-action="DeleteFromForm" method="post" 
                                                      style="display: inline;" 
                                                      class="delete-form" 
                                                      data-specimen-name="@specimen.Name">
                                                    <input type="hidden" name="id" value="@specimen.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash me-1"></i>Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">
                                            <i class="fas fa-info-circle me-2"></i>
                                            No specimen types found. Add your first specimen type above.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Summary Information -->
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Information
                                    </h6>
                                    <p class="card-text small">
                                        • You can add unlimited specimen types<br>
                                        • Specimen types are used in pathology forms<br>
                                        • Deleting a specimen type will remove it from all future forms<br>
                                        • Existing forms will retain their specimen type information
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-chart-bar me-2"></i>
                                        Statistics
                                    </h6>
                                    <p class="card-text">
                                        <strong>Total Specimen Types:</strong> @(Model?.Count ?? 0)<br>
                                        <strong>Available for Forms:</strong> @(Model?.Count ?? 0)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Navigation -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <a asp-controller="Pathology" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Forms
                            </a>
                            <a asp-controller="Pathology" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create New Form
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Focus on the input field when page loads
            $('#Name').focus();

            // Add some animation to the table rows
            $('tbody tr').hover(
                function() {
                    $(this).addClass('table-active');
                },
                function() {
                    $(this).removeClass('table-active');
                }
            );

            // Handle delete confirmation
            $('.delete-form').on('submit', function(e) {
                var specimenName = $(this).data('specimen-name');
                if (!confirm('Are you sure you want to delete "' + specimenName + '"? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
} 